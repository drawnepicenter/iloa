{
  "name": "iloa",
  "version": "0.1.0",
  "description": "A command line tool for gaining knowledge.",
  "author": "Andrew Prentice",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "main": "bin/iloa.js",
  "bin": {
    "iloa": "bin/iloa.js"
  },
  "scripts": {
    "release": "standard-version",
    "bump": "git push origin master --tags && npm publish",
    "lcov": "./node_modules/.bin/nyc report -r text-lcov > lcov.info",
    "cover": "cat lcov.info | ./node_modules/.bin/coveralls",
    "climate": "./node_modules/.bin/codeclimate-test-reporter < lcov.info",
    "report": "./node_modules/.bin/nyc report -r html",
    "pretest": "./node_modules/.bin/babel test/test.es6 -o test/test.js",
    "test": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc ./node_modules/.bin/_mocha test/test.js"
  },
  "nyc": {
    "cache": true,
    "include": [
      "src/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "dotty": "^0.0.2",
    "glob": "^7.1.1",
    "good-guy-http": "^1.7.3",
    "lodash": "^4.16.4",
    "moment": "^2.15.1",
    "node-nightly": "^1.6.1",
    "noon": "^1.0.13",
    "ora": "^0.3.0",
    "wrap-ansi": "^2.0.0",
    "x-ray": "^2.3.0",
    "xml2js": "^0.4.17",
    "yargonaut": "^1.1.2",
    "yargs": "github:yargs/yargs"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-plugin-lodash": "^3.2.9",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "coveralls": "^2.11.14",
    "cross-env": "^3.1.2",
    "cz-conventional-changelog": "^1.2.0",
    "del": "^2.2.2",
    "eslint": "^3.7.1",
    "fs-extra": "^0.30.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-coveralls": "^0.1.4",
    "gulp-eslint": "^3.0.1",
    "ink-docstrap": "^1.3.0",
    "mocha": "^3.1.1",
    "npm-check-updates": "^2.8.5",
    "nyc": "^8.3.1",
    "rimraf": "^2.5.4",
    "run-sequence": "^1.2.2",
    "sinon": "^1.17.6",
    "standard-version": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drawnepicenter/iloa.git"
  },
  "bugs": {
    "url": "https://github.com/drawnepicenter/iloa/issues"
  },
  "homepage": "https://github.com/drawnepicenter/iloa#readme",
  "keywords": [
    "cli",
    "search",
    "api",
    "duckduckgo",
    "searx",
    "wikipedia",
    "scraper",
    "rest",
    "reference",
    "lookup",
    "summary",
    "knowledge",
    "information",
    "disambiguation"
  ]
}
